<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBlack"
    android:orientation="vertical">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/baseWhite" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/baseWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/ActionButtonStyle"
                android:text="CE" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text="(" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text=")" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButtonStyle"
                android:text="7" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="8" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="9" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButtonStyle"
                android:text="4" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="5" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="6" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButtonStyle"
                android:text="1" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="2" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="3" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButtonStyle"
                android:text="." />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="0" />

            <TextView
                style="@style/NumberButtonStyle"
                android:text="<-" />

            <TextView
                style="@style/ActionButtonStyle"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>